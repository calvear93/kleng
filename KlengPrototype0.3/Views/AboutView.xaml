            x:Name="Back_Button"
            Grid.Row="0"
            Width="29"
            Height="30"
            Margin="0,0,10,320"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
            Click="Back_Button_Click">
            <materialDesign:PackIcon
                Width="19"
                Height="20"
                Kind="ArrowLeft" />
        </Button>
        <TextBlock
            x:Name="title"
            Margin="48,61,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Roboto"
            FontSize="14"
            FontWeight="Bold"
            Text="Autor:" />
        <TextBlock
            x:Name="corrects"
